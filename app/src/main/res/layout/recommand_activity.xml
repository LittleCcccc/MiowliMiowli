<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/timeline_constraint_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/recommand_activity_timeline_constraint_layout_background_color">

	<android.support.constraint.ConstraintLayout
		android:id="@+id/view_constraint_layout"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintHorizontal_weight="1"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_weight="1"
		tools:layout_editor_absoluteX="0dp"
		tools:layout_editor_absoluteY="0dp">
	
		<android.support.v7.widget.RecyclerView
			android:id="@+id/recommand_recycler_view"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginBottom="@dimen/recommand_activity_recommand_recycler_view_margin_bottom"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHorizontal_weight="1"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/news_search_constraint_layout"
			app:layout_constraintVertical_weight="0.87"
			tools:layout_editor_absoluteX="0dp"
			tools:layout_editor_absoluteY="45dp"
			tools:listitem="@layout/cell_view_holder"/>
	
		<android.support.constraint.ConstraintLayout
			android:id="@+id/news_search_constraint_layout"
			android:layout_width="0dp"
			android:layout_height="@dimen/recommand_activity_news_search_constraint_layout_height"
			android:background="@color/recommand_activity_news_search_constraint_layout_background_color"
			app:layout_constraintHorizontal_weight="1"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_editor_absoluteX="0dp"
			tools:layout_editor_absoluteY="0dp">

			<android.support.v7.widget.SearchView
				android:id="@+id/news_search_bar_search_view"
				android:layout_width="0dp"
				android:layout_height="@dimen/recommand_activity_news_search_bar_search_view_height"
				android:background="@drawable/recommand_activity_news_search_bar_search_view_background"
				app:layout_constraintHorizontal_weight="1"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:queryHint="@string/recommand_activity_news_search_bar_search_view_hint"
				app:searchIcon="@drawable/search_icon" />
		</android.support.constraint.ConstraintLayout>
	</android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>