<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		style="@style/BottomSheetTitle"
		android:gravity="center"

		android:text="@string/settings_activity_vip_button_sheet_title" />

	<TextView
		style="@style/BottomSheetItem"
		android:gravity="center"
		android:id="@+id/tv1"
		android:text="@string/settings_activity_vip_button_sheet_item_one_text" />

	<TextView
		style="@style/BottomSheetItem"
		android:gravity="center"
		android:id="@+id/tv2"
		android:text="@string/settings_activity_vip_button_sheet_item_two_text" />
</LinearLayout>