<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/advertisement"
    android:layout_width="match_parent"
    android:layout_height="@dimen/advertisement_two_view_holder_advertisement_height">

    <View
        android:id="@+id/bg_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/advertisement_two_view_holder_bg_constraint_layout_margin_bottom"
        android:background="@color/advertisement_two_view_holder_bg_constraint_layout_background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.97"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>

    <ImageView
        android:id="@+id/bg_event_image_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/bg_event_temp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>

    <TextView
        android:id="@+id/pinktext_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/advertisement_two_view_holder_pinktext_text_view_margin_start"
        android:layout_marginTop="@dimen/advertisement_two_view_holder_pinktext_text_view_margin_top"
        android:gravity="start"
        android:lineSpacingMultiplier="1.18"
        android:text="@string/advertisement_two_view_holder_pinktext_text_view_text"
        android:textColor="@color/advertisement_two_view_holder_pinktext_text_view_text_color"
        android:textSize="@dimen/advertisement_two_view_holder_pinktext_text_view_text_size"
        app:layout_constraintLeft_toRightOf="@+id/bg_event_image_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="13dp"/>

    <TextView
        android:id="@+id/blacktext_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/advertisement_two_view_holder_blacktext_text_view_margin_end"
        android:layout_marginStart="@dimen/advertisement_two_view_holder_blacktext_text_view_margin_start"
        android:layout_marginTop="@dimen/advertisement_two_view_holder_blacktext_text_view_margin_top"
        android:gravity="start"
        android:text="@string/advertisement_two_view_holder_blacktext_text_view_text"
        android:textColor="@color/advertisement_two_view_holder_blacktext_text_view_text_color"
        android:textSize="@dimen/advertisement_two_view_holder_blacktext_text_view_text_size"
        app:layout_constraintHorizontal_weight="0.64"
        app:layout_constraintLeft_toRightOf="@+id/bg_event_image_image_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinktext_text_view"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="38dp"/>

    <TextView
        android:id="@+id/greytext_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/advertisement_two_view_holder_greytext_text_view_margin_start"
        android:layout_marginTop="@dimen/advertisement_two_view_holder_greytext_text_view_margin_top"
        android:alpha="0.4"
        android:gravity="start"
        android:text="@string/advertisement_two_view_holder_greytext_text_view_text"
        android:textColor="@color/advertisement_two_view_holder_greytext_text_view_text_color"
        android:textSize="@dimen/advertisement_two_view_holder_greytext_text_view_text_size"
        app:layout_constraintLeft_toRightOf="@+id/bg_event_image_image_view"
        app:layout_constraintTop_toBottomOf="@+id/blacktext_text_view"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="63dp"/>
</android.support.constraint.ConstraintLayout>